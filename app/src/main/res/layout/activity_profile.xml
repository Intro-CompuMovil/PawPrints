<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tu_informaci_n_personal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:textColor="@color/Main_brown"
        android:textSize="25sp"
        android:textStyle="italic"
        />



    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/profilePicReg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"
        app:layout_constraintHorizontal_bias="0.1"
        android:src="@raw/cat"
        android:scaleType="fitCenter"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/NombreReg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/profilePicReg"
        app:layout_constraintVertical_bias="0.52"
        app:layout_constraintHorizontal_bias="0.18"
        android:text="@string/nombre"
        android:inputType="text"
        android:textColor="@color/Menu_brown"
        android:textColorHint="@color/Main_brown"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/nomDueÃ±oReg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/NombreReg"
        app:layout_constraintVertical_bias="0.52"
        app:layout_constraintHorizontal_bias="0.25"
        android:text="@string/nombre_del_due_o"
        android:textColor="@color/Menu_brown"
        android:textColorHint="@color/Main_brown"
        />

    <TextView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/razaShow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintHorizontal_bias="0.65"
        android:text="@string/razaShow"
        android:textColor="@color/Menu_brown"
        android:textColorHint="@color/Main_brown"
        />


</androidx.constraintlayout.widget.ConstraintLayout>